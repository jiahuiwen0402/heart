/* pages/home/home.wxss */

.top{
    width: 100%;
    height: 300rpx;
    background-color: #a1a0ee;
}
.mid{
    width: 85%;
    height: 350rpx;
    background-color: #f5e492;
    border-radius: 30rpx;
    position: absolute;
    top: 100rpx;
    left: 35rpx;
    color: #a1a0ee;
    padding: 20rpx;
    line-height: 100rpx;
    text-align: center;
}
.number{
    font-size: x-large;
    color: #fff;
}
.view{
    height: 200rpx;
    padding: 0;
    color: #fff;
    border-radius: 20rpx;
    background: -webkit-linear-gradient(left,#8887cb,#c0bdf2);
    display: inline-block;
    margin: 30rpx;
}
.bot{
    width: 85%;
    height: 600rpx;
    box-shadow: 0 0 10px rgb(224, 223, 223);
    border-radius: 40rpx;
    position: absolute;
    bottom: 0;
    left: 40rpx;
    text-align: center;
}
.tiaozhuan{
    display: inline-block;
}
.homeimg{
    width: 90rpx;
    height: 100rpx;
    margin-top: 20rpx;
}